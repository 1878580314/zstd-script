{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ZARC Studio",
  "version": "0.1.0",
  "identifier": "com.timerain.zarcstudio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ZARC Studio",
        "width": 1260,
        "height": 860,
        "minWidth": 980,
        "minHeight": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "High-performance zstd toolbox",
    "longDescription": "Cross-platform zstd app with precise decompression benchmark and light polished interface.",
    "category": "Utility"
  }
}
